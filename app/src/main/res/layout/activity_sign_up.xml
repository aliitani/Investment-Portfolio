<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context="com.example.aliitani.Investment_Portfolio.SignUp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:padding="20dp"
        android:id="@+id/linearLayout3">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sign_up"
            android:textSize="30sp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:paddingBottom="50dp"
            android:paddingTop="5dp"
            android:layout_marginBottom="11dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/username_title"
            android:textSize="24sp"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/username_sign_up_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter_username"
            android:inputType="textPersonName"
            android:ems="10"
            android:maxLength="16"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/password_title"
            android:textSize="24sp"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/password_sign_up_id_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter_password"
            android:ems="10"
            android:maxLength="16"
            android:inputType="textPassword"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/confirm_pass_title"
            android:textSize="24sp"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/password_sign_up_id_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/confirm_password_hint"
            android:ems="10"
            android:maxLength="16"
            android:inputType="textPassword"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/email_title"
            android:textSize="24sp"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/email_sign_up_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:hint="@string/enter_email"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/sign_up_id"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:text="@string/sign_up_title"
            android:background="@color/colorPrimary"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:textAllCaps="false"
            android:textSize="20sp"/>
    </LinearLayout>

</RelativeLayout>
